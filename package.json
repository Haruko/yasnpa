{
  "name": "yasnpa",
  "version": "1.0.0",
  "description": "Yet Another Spotify Now Playing App",
  "main": "index.js",
  "bin": "index.js",
  "scripts": {
    "start": "npm run build && ./bin/yasnpa/yasnpa.exe",
    
    "build": "npm run build-exec && npm run copy-sub",
    "build-exec": "pkg -t latest-win --out-path ./bin/yasnpa/ ./package.json",
    
    "copy-sub": "npm run copy-config && npm run copy-dep",
    "copy-config": "powershell Copy-Item ./config.json ./bin/yasnpa/",
    "copy-dep": "powershell Copy-Item ./node_modules/open/xdg-open ./bin/yasnpa/",
    
    "release": "npm run build && npm run make-dir && npm run compress",
    "make-dir": "powershell md ./release -Force",
    "compress": "powershell Compress-Archive -Path ./bin/yasnpa -DestinationPath ./release/yasnpa%npm_package_version%.zip",
    
    "clean": "powershell Remove-Item -Recurse -Force ./bin, ./release"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ZoeyBonaventura/yasnpa.git"
  },
  "keywords": [
    "Spotify",
    "Playing"
  ],
  "author": "Isoitiro",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/ZoeyBonaventura/yasnpa/issues"
  },
  "homepage": "https://github.com/ZoeyBonaventura/yasnpa#readme",
  "dependencies": {
    "axios": "^0.19.2",
    "express": "^4.17.1",
    "fs-extra": "^9.0.1",
    "json5": "^2.1.3",
    "open": "^7.1.0",
    "pkce": "^1.0.0-beta2",
    "querystring": "^0.2.0"
  },
  "pkg": {
    "assets": [
      "./public/*"
    ]
  }
}
